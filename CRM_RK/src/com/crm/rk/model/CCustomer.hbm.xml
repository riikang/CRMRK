<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false"
	package="com.crm.rk.model">
	<class name="CCustomer" table="ccustomer">
		<id column="个人客户编号" name="id" type="integer" length="10">
		 	<generator class="identity"/>
		</id>
		<property column="获取时间" name="gettime" type="date" not-null="true" />
		
		<property column="公司名称" name="company_name" type="string" length="50" not-null="true" />
		<property column="所在城市" name="city" type="string" length="50"/>
		<property column="公司行业" name="company_type" type="string" length="30" />
		<property column="公司座机" name="company_num" type="string" length="50" />
		<property column="客户状态" name="status" type="string" length="20" />
		<property column="客户类型" name="type" type="string" length="10" />
		<property column="客户等级" name="level" type="string" length="10" />
		<property column="客户来源" name="source" type="string" length="20" />	
		<property column="成熟度" name="maturity" type="string" length="50" />
		<property column="公司地址" name="company_address" type="string" length="100" />
		<property column="简介" name="description" type="string" length="100" />
		
		<property column="联系人名称" name="name" type="string" length="20" not-null="true" />
		<property column="联系人性别" name="sex" type="string" length="8" />
		<property column="联系人职务" name="duty" type="string" length="20"  />
		<property column="联系人手机号" name="phonenum" type="string" length="20" not-null="true" />
		<property column="邮箱" name="email" type="string" length="30"  />
		
	</class>

</hibernate-mapping>
